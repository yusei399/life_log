<span class="user_step_log_title">
	投稿一覧
</span>
<% if user_signed_in? %>
	<div class="function">
		<%= button_to "投稿", {controller: 'user_step_logs', action: 'new'}, {method: :get, class: "tweet"} %>
		<div><%=link_to "グループを作成する", new_group_path, class: "create-group" %> </div>
		<div><%= link_to "グループ一覧", groups_path, class: "group-index" %></div>
		<div class="search">
			<%= render "searches/search" %>
		</div>
	</div>
<% end %>
<% @user_step_logs.each do |log|%>
	<h5>歩数 : <%= log.steps %></h5>
	<span><%= link_to "編集", "user_step_logs/#{log.id}/edit" %></span><br>
	<span><%= link_to "詳細", "user_step_logs/#{log.id}" %></span><br>
	<br>
<%end%>
