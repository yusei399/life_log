<% if @user_step_log.favorited_by?(current_user) %>
<%= button_to  user_step_log_favorite_path(@user_step_log), method: :delete do %>
	<i class="fas fa-heart">❤︎</i>
		<%= @user_step_log.favorites.count %>
<% end %>
<% else %>
<%= button_to user_step_log_favorites_path(@user_step_log), method: :post do %>
	<i class="far fa-heart">♡</i>
	<%= @user_step_log.favorites.count %>
<% end %>
<% end %>